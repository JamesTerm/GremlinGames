<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="ClickOnce.MainWindow"
	x:Name="Window"
	Title="MainWindow"
	Width="640" Height="480" Background="{x:Null}" Loaded="Window_Loaded">

	<Grid x:Name="LayoutRoot">
		<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="#FF545484" Offset="0"/>
				<GradientStop Color="#FFCCCCF2" Offset="1"/>
			</LinearGradientBrush>
		</Grid.Background>
		<Grid Name="Grid_OSG_Parent" Margin="80,150,8,8" />
		<TextBlock Margin="8,121,8,8" TextWrapping="Wrap">
            <TextBlock.Foreground>
				<LinearGradientBrush EndPoint="1.046,1.017" StartPoint="-0.017,0.022">
					<GradientStop Color="#FF8BAAFC" Offset="0.047"/>
					<GradientStop Color="White" Offset="0.908"/>
				</LinearGradientBrush>
			</TextBlock.Foreground>
            <TextBlock.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#7E545484" Offset="1"/>
					<GradientStop Color="#18CCCCF2"/>
				</LinearGradientBrush>
			</TextBlock.Background><Run FontWeight="Bold" Text="What does this thing need to do?"/><LineBreak/><LineBreak/><Run Text="1. check for application update from either web page or launcher page (also web page)"/><LineBreak/><Run Text="2. launch application from either web page or launcher page (also web page)"/><LineBreak/><Run Text="3.a Run installed and current version of application"/><LineBreak/><Run Text="3.b Install or update application wizard."/><LineBreak/><Run Text="&#x9;1. asks permissions"/><LineBreak/><Run Text="&#x9;2. installation dir"/><LineBreak/><Run Text="&#x9;3. creates start Menu listing"/><LineBreak/><Run Text="&#x9;4. creates Uninstall listing"/><LineBreak/><Run Text="&#x9;5. creates desktop shortcut"/><LineBreak/><Run Text="4. installed application runs launcher page"/><LineBreak/><Run Text="5. launcher page runs app"/><LineBreak/><Run Text=""/><LineBreak/><Run Text="Bonus features:"/><LineBreak/><Run Text="custom Desktop icon"/><LineBreak/><Run Text="custom Start menu icon"/><LineBreak/><Run Text="custom Uninstall icon"/></TextBlock>
		<Rectangle Stroke="Black" RadiusX="3.5" RadiusY="3.5" Margin="4,21,8,0" VerticalAlignment="Top" Height="32">
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF6878C8" Offset="1"/>
					<GradientStop Color="#FFE7E7E7"/>
					<GradientStop Color="#FFC2C7E0" Offset="0.573"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		<TextBlock Margin="8,-2,268,0" VerticalAlignment="Top" Height="64" FontSize="50.667" FontWeight="Bold" Text="ClickOnce Test" TextWrapping="Wrap" >
			<TextBlock.Foreground>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="#FFEC2323" Offset="1"/>
				</LinearGradientBrush>
			</TextBlock.Foreground>
		</TextBlock>
		<TextBlock HorizontalAlignment="Left" Margin="8,68,0,0" VerticalAlignment="Top" Width="81" Height="15" Text="Version 1.0.0.0" TextWrapping="Wrap"/>
		<Button Margin="0,68,47,0" VerticalAlignment="Top" Height="30" Content="Launch App?" HorizontalAlignment="Right" Width="87" Click="Button_Click" />
        <TextBlock Margin="99,68,152,0" VerticalAlignment="Top" Height="15" Text="Is it possible to make the version# dynamic on the web link?" TextWrapping="Wrap"/>
	</Grid>
</Window>