<Window x:Class="Launcher.UpdateScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="UpdateScreen" Height="174" Width="446" Loaded="Updater_Loaded">
    <StackPanel>
        <ProgressBar Margin="10" Height="28" Name="ProgressTotal" Width="378" />
        <Label Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Name="ActionText"
                       Text="Checking for updates..." TextWrapping="Wrap" />
        </Label>
        <Label Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="" Name="DetailedActionText" />
        </Label>
    </StackPanel>
</Window>
